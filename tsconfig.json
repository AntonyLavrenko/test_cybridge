{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./src",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "es2017",
      "ESNext",
      "dom"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "skipLibCheck": true,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "webpack",
    "bin"
  ]
}
